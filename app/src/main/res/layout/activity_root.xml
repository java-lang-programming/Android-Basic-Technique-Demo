<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="java_lang_programming.com.android_basic_technique_demo.article89.kotlin.RootActivity">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="--------"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/display">

            <Button
                android:id="@+id/btn_check_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="count" />

            <Button
                android:id="@+id/btn_pop_back_stack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/btn_check_count"
                android:layout_toRightOf="@+id/btn_check_count"
                android:text="@string/btn_popBackStack" />

            <Button
                android:id="@+id/btn_pop_back_stack_inclusive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/btn_pop_back_stack"
                android:layout_toRightOf="@+id/btn_pop_back_stack"
                android:text="@string/btn_popBackStack_inclusive" />

        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout" />

</RelativeLayout>
